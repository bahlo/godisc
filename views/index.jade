extends layout

block content
  if !user
    a(href="/login") Login
    br
    a(href="/register") Register
  if user
    .page-header
      h1 Themen
    each thread in threads
      h1
        a(href="/thread/#{thread._id}")= thread.topic
        small  von #{thread.creator.username} am #{moment(thread.created).format('DD.MM.YY')}
