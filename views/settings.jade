extends layout

block content
  .page-header
    h1 Settings
      small  #{user.username}
  if user.picture
    img.col-md-2.img-responsive.img-circle(src=user.picture)
  form.col-md-6.form-horizontal(action="/settings", method="post", enctype="multipart/form-data")
    .form-group
      label.control-label.col-sm-3(for="displayname") Displayname
      .col-sm-9
        input.form-control(type="text", name="displayname", id="displayname", placeholder="Name", value=user.displayName)
    .form-group
      label.control-label.col-sm-3(for="picture") Picture:
      .col-sm-9
        input#picture(type="file", name="picture")
    input.btn.btn-default(type="submit", value="Save")
